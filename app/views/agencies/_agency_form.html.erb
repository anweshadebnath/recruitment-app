<% form_for(@agency, :url =>  url_for(:host => "apps.mirafra.com/recruit", :controller => "agencies", :action => (button_tag == "Update" ? "update" : "create"))) do |f| %>
  <%= f.error_messages %>
  <table id="agency_from_table">
    <tr>
      <td class="<%= class_label %>"> Agency Name </td>
      <td class="<%= class_field %>"> <%= f.text_field :name %> </td>
    </tr>
    <tr>
      <td class="agency_submit_button" colspan="2">
        <%= f.submit("#{button_tag}") %>
      </td>
    </tr>
  </table>
<% end %>
